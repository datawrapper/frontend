{
    "name": "@datawrapper/frontend",
    "version": "1.0.0",
    "description": "The new Datawrapper frontend app",
    "scripts": {
        "format": "prettier --write 'src/**/*.{js,svelte}'",
        "lint": "eslint 'src/**/*.{js,svelte}' && prettier --check 'src/**/*.{js,svelte}'",
        "dev": "sapper dev",
        "build": "sapper build --legacy",
        "export": "sapper export --legacy",
        "frontend": "node __sapper__/build",
        "start": "node __sapper__/build",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@datawrapper/chart-core": "^8.16.0",
        "@datawrapper/locales": "1.0.2",
        "@datawrapper/orm": "3.13.0",
        "@datawrapper/shared": "^0.25.4",
        "fs-extra": "9.0.0",
        "nanoid": "2.1.11",
        "node-fetch": "2.6.0",
        "polka": "0.5.2",
        "serve-static": "1.14.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-syntax-dynamic-import": "~7.8.3",
        "@babel/plugin-transform-runtime": "^7.9.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@babel/runtime": "^7.9.6",
        "@rollup/plugin-commonjs": "11.0.2",
        "@rollup/plugin-node-resolve": "7.1.3",
        "@rollup/plugin-replace": "2.3.2",
        "babel-eslint": "~10.1.0",
        "core-js": "~3.6.5",
        "eslint": "~6.8.0",
        "eslint-config-prettier": "~6.10.1",
        "eslint-config-standard": "~14.1.1",
        "eslint-plugin-import": "~2.20.2",
        "eslint-plugin-node": "~11.1.0",
        "eslint-plugin-promise": "~4.2.1",
        "eslint-plugin-standard": "~4.0.1",
        "eslint-plugin-svelte3": "~2.7.3",
        "husky": "~4.2.5",
        "lint-staged": "^10.1.7",
        "prettier": "~1.19.1",
        "prettier-plugin-svelte": "~0.7.0",
        "rollup": "~2.6.1",
        "rollup-plugin-babel": "~4.4.0",
        "rollup-plugin-svelte": "~5.2.1",
        "rollup-plugin-terser": "~5.3.0",
        "sapper": "0.27.12",
        "svelte": "~3.20.1"
    },
    "eslintIgnore": [
        "src/node_modules"
    ],
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 100
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true
        },
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "rules": {
                    "import/first": 0
                },
                "processor": "svelte3/svelte3"
            }
        ],
        "extends": [
            "standard",
            "prettier",
            "prettier/standard"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
