{
    "name": "@datawrapper/frontend",
    "version": "0.0.1",
    "description": "TODO",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html,svelte}' --write",
        "lint": "prettier --check 'src/**/*.{js,html,svelte}' && eslint 'src/**/*.{js,svelte}'",
        "dev": "sapper dev",
        "build": "sapper build --legacy",
        "export": "sapper export --legacy",
        "start": "node __sapper__/build"
    },
    "dependencies": {
        "@datawrapper/chart-core": "1.1.0",
        "node-fetch": "2.6.0",
        "polka": "0.5.2",
        "serve-static": "1.14.1"
    },
    "devDependencies": {
        "@babel/core": "~7.6.0",
        "@babel/plugin-syntax-dynamic-import": "~7.2.0",
        "@babel/plugin-transform-runtime": "~7.6.0",
        "@babel/preset-env": "~7.6.0",
        "@babel/runtime": "~7.6.0",
        "babel-eslint": "~10.0.3",
        "eslint": "~6.3.0",
        "eslint-plugin-svelte3": "~2.7.3",
        "husky": "~3.0.5",
        "lint-staged": "~9.2.5",
        "npm-run-all": "~4.1.5",
        "prettier": "~1.18.2",
        "prettier-plugin-svelte": "~0.7.0",
        "rollup": "~1.21.2",
        "rollup-plugin-babel": "~4.3.3",
        "rollup-plugin-commonjs": "~10.1.0",
        "rollup-plugin-node-resolve": "~5.2.0",
        "rollup-plugin-replace": "~2.2.0",
        "rollup-plugin-svelte": "~5.1.0",
        "rollup-plugin-terser": "~5.1.1",
        "sapper": "~0.27.8",
        "svelte": "~3.12.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint",
            "git add"
        ],
        "*.html": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintIgnore": [
        "src/node_modules"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
