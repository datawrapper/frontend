{
    "name": "@datawrapper/frontend",
    "version": "2.0.0",
    "description": "The new Datawrapper frontend service using hapi",
    "scripts": {
        "format": "prettier --write 'src/**/*.{js,svelte}'",
        "lint": "eslint 'src/**/*.{js,svelte}' && prettier --check 'src/**/*.{js,svelte}'",
        "prepare": "husky install",
        "build:css": "node-sass --omit-source-map-url src/styles/index.scss static/datawrapper.css",
        "watch:css": "npm run build:css -- --watch"
    },
    "dependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@datawrapper/chart-core": "^8.31.0",
        "@datawrapper/icons": "^1.1.2",
        "@datawrapper/locales": "^1.2.3",
        "@datawrapper/orm": "^3.22.2",
        "@datawrapper/schemas": "^1.8.0",
        "@datawrapper/service-utils": "^0.6.3",
        "@datawrapper/shared": "^0.28.6",
        "@hapi/bell": "^12.1.1",
        "@hapi/catbox-memory": "^5.0.0",
        "@hapi/catbox-redis": "^6.0.2",
        "@hapi/hapi": "19.1.1",
        "@hapi/hoek": "^9.1.1",
        "@hapi/inert": "^6.0.2",
        "@hapi/vision": "^6.0.1",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.1.0",
        "@rollup/plugin-replace": "^2.3.4",
        "async": "^3.2.0",
        "babel-plugin-transform-async-to-promises": "^0.8.15",
        "dayjs": "^1.10.4",
        "ejs": "^3.1.6",
        "eslint-plugin-svelte3": "^3.0.0",
        "fs-extra": "^9.0.1",
        "got": "^11.5.2",
        "hapi-pino": "^8.3.0",
        "hapi-plugin-websocket": "^2.3.2",
        "jsesc": "^3.0.1",
        "less": "^4.1.1",
        "lodash": "^4.17.20",
        "pug": "^3.0.1",
        "requirejs": "^2.3.6",
        "rollup": "^2.36.2",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "svelte": "^3.31.2",
        "svelte-preprocess-less": "^0.4.0",
        "tempfile": "^3.0.0",
        "underscore": "^1.12.0"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "bulma": "^0.9.2",
        "eslint": "^7.18.0",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "node-sass": "^5.0.0",
        "prettier": "^2.2.1",
        "prettier-plugin-svelte": "^2.1.0"
    },
    "eslintIgnore": [
        "src/node_modules"
    ],
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "lint-staged": {
        "*.{js,svelte}": "prettier --write",
        "*.js": "eslint --cache --fix"
    }
}
