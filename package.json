{
    "name": "@datawrapper/frontend",
    "version": "2.0.0",
    "description": "The new Datawrapper frontend service using hapi",
    "scripts": {
        "format": "prettier --write 'src/**/*.{js,svelte}'",
        "lint": "eslint 'src/**/*.{js,svelte}' && prettier --check 'src/**/*.{js,svelte}'"
    },
    "dependencies": {
        "@datawrapper/chart-core": "^8.19.5",
        "@datawrapper/locales": "^1.0.5",
        "@datawrapper/orm": "^3.18.5",
        "@datawrapper/schemas": "^1.6.0",
        "@datawrapper/service-utils": "^0.2.1",
        "@hapi/bell": "^12.1.1",
        "@hapi/catbox-memory": "^5.0.0",
        "@hapi/catbox-redis": "^6.0.2",
        "@hapi/hapi": "19.1.1",
        "@hapi/inert": "^6.0.2",
        "@hapi/vision": "^6.0.1",
        "fs-extra": "^9.0.1",
        "got": "^11.5.2",
        "hapi-pino": "^8.3.0",
        "jsesc": "^3.0.1",
        "lodash": "^4.17.20",
        "pug": "^3.0.0"
    },
    "devDependencies": {},
    "eslintIgnore": [
        "src/node_modules"
    ],
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 100
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true
        },
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "rules": {
                    "import/first": 0
                },
                "processor": "svelte3/svelte3"
            }
        ],
        "extends": [
            "standard",
            "prettier",
            "prettier/standard"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
